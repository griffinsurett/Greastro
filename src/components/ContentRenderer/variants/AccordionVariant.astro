---
// src/components/ContentRenderer/variants/AccordionVariant.astro
/**
 * Accordion Variant - Collapsible Q&A layout
 * Features: Single/multiple expansion, React component with client:visible
 */

import type { BaseVariantProps } from "../ContentRenderer.types";
import Accordion from "@/components/LoopTemplates/Accordion";
import Button from "@/components/Button/Button";
import { shouldShowCollectionCTA } from "../utils/helpers";

interface Props extends BaseVariantProps {
  allowMultiple?: boolean;
}

const {
  items = [],
  title,
  description,
  className = "",
  allowMultiple = false,
  collectionUrl,
  collectionTitle,
  id,
} = Astro.props as Props;

const viewAllText = `View All ${collectionTitle || ""}`.trim();
---

<section id={id} class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="mb-12">
      {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
      {description && (
        <p class="text-lg text-gray-600 max-w-3xl">{description}</p>
      )}
    </div>
  )}

  {items.length > 0 && (
    <Accordion items={items} allowMultiple={allowMultiple} client:visible />
  )}

  {shouldShowCollectionCTA(collectionUrl, items.length) && (
    <div class="mt-12 text-center">
      <Button
        href={collectionUrl}
        rightIcon="lu:arrow-right"
        variant="primary"
        size="lg"
      >
        {viewAllText}
      </Button>
    </div>
  )}
</section>