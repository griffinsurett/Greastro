---
// src/components/ContentRenderer/variants/SocialMediaVariant.astro
/**
 * Social Media Variant - Social Icon List
 * 
 * Compact social media icon display with:
 * - Horizontal or vertical layout
 * - Left/center/right alignment
 * - Size variants (sm, md, lg)
 * - Optional title and description
 * 
 * Best for social media links in headers, footers, contact pages.
 */

import type { BaseVariantProps } from "../ContentRenderer.types";
import SocialIcon from '@/components/LoopComponents/SocialIcon.astro';

interface Props extends BaseVariantProps {
  size?: 'sm' | 'md' | 'lg';                          // Icon size
  layout?: 'horizontal' | 'vertical';                 // Icon arrangement
  alignment?: 'left' | 'center' | 'right';           // Icon alignment
}

const { 
  items = [],
  title,
  description,
  className = '',
  size = 'md',
  layout = 'horizontal',
  alignment = 'center'
} = Astro.props as Props;

// Alignment classes for flex container
const alignmentClasses = {
  left: 'justify-start',
  center: 'justify-center',
  right: 'justify-end'
};

// Layout direction classes
const layoutClasses = {
  horizontal: 'flex-row',
  vertical: 'flex-col'
};
---
<div class={`py-8 ${className}`}>
  {/* Optional header */}
  {(title || description) && (
    <div class={`mb-6 ${alignment === 'center' ? 'text-center' : ''}`}>
      {title && <h3 class="text-2xl font-bold mb-2">{title}</h3>}
      {description && <p class="text-gray-600">{description}</p>}
    </div>
  )}
  
  {/* Icon list */}
  {items.length > 0 && (
    <ul class={`flex ${layoutClasses[layout]} ${alignmentClasses[alignment]} gap-4 list-none flex-wrap`}>
      {items.map((item) => (
        <li>
          <SocialIcon {...item} size={size} />
        </li>
      ))}
    </ul>
  )}
</div>