---
// src/components/Footer.astro
import { siteData } from "@/content/siteData";
import Section from "./section/Section.astro";
import GDPRManager from "./consent/GDPRManager";
---

<footer class="bg-gray-900 text-white mt-auto">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-xl font-bold mb-4">{siteData.title}</h3>
        <p class="text-gray-400">{siteData.description}</p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="/" class="text-gray-400 hover:text-white transition-colors">Home</a></li>
          <li><a href="/blog" class="text-gray-400 hover:text-white transition-colors">Blog</a></li>
          <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">Services</a></li>
          <li><a href="/contact-us" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>

      <!-- Social Media -->
      <div>
        <h4 class="text-lg font-semibold mb-4">Connect With Us</h4>
        <Section
          collection="social-media"
          variant="SocialMediaVariant"
          size="md"
          alignment="left"
          className="text-white"
        />
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-400 text-sm">
          &copy; {new Date().getFullYear()} {siteData.legalName}. All rights reserved.
        </p>

        <div class="flex flex-wrap items-center gap-4 text-sm">
          <a href="/privacy-policy" class="text-gray-400 hover:text-white transition-colors">
            Privacy Policy
          </a>
          <a href="/cookie-policy" class="text-gray-400 hover:text-white transition-colors">
            Cookie Policy
          </a>
          
          <!-- GDPR Manager renders modal + button inline -->
          <GDPRManager client:idle />
        </div>
      </div>
    </div>
  </div>
</footer>