---
// src/components/section/loops/ArticleCard.astro
export interface Props {
  title: string;
  url?: string;
  description?: string;
  date?: Date | string;
  tags?: string[];
  author?: {
    name: string;
    role?: string;
    initials: string;
  };
}

const { title, url, description, date, tags, author } = Astro.props;
---

<article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
  <div class="p-6">
    {/* Article info */}
    <div class="mb-4">
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-3">
          {tags.slice(0, 3).map((tag: string) => (
            <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">
              {tag}
            </span>
          ))}
        </div>
      )}
      
      <h3 class="text-2xl font-bold mb-2">
        {url ? (
          <a href={url} class="text-gray-900 hover:text-blue-600 transition-colors">
            {title}
          </a>
        ) : (
          <span class="text-gray-900">{title}</span>
        )}
      </h3>
      
      {description && (
        <p class="text-gray-600 mb-4 line-clamp-2">
          {description}
        </p>
      )}
      
      <div class="flex items-center text-sm text-gray-500 gap-4">
        {date && (
          <time>{new Date(date).toLocaleDateString()}</time>
        )}
      </div>
    </div>
    
    {/* Author info */}
    {author && (
      <div class="pt-4 mt-4 border-t border-gray-200">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
            <span class="text-blue-600 text-sm font-bold">
              {author.initials}
            </span>
          </div>
          <div>
            <p class="font-medium text-gray-900">
              {author.name}
            </p>
            {author.role && (
              <p class="text-xs text-gray-500">{author.role}</p>
            )}
          </div>
        </div>
      </div>
    )}
  </div>
</article>

<style>
  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
</style>