---
// src/components/section/loops/ListCard.astro
export interface Props {
  title: string;
  url?: string;
  description?: string;
  date?: Date | string;
  image?: {
    src: string;
    alt: string;
  };
}

const { title, url, description, date, image } = Astro.props;
---

<article class="flex gap-8 p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
  {image && (
    <div class="flex-shrink-0">
      <img 
        src={image.src} 
        alt={image.alt}
        class="w-48 h-36 object-cover rounded-md"
      />
    </div>
  )}
  <div class="flex-1">
    <h3 class="text-2xl font-semibold mb-2">
      {url ? (
        <a href={url} class="text-gray-900 hover:text-blue-600 transition-colors">
          {title}
        </a>
      ) : (
        <span class="text-gray-900">{title}</span>
      )}
    </h3>
    {description && (
      <p class="text-gray-600 leading-relaxed mb-2">{description}</p>
    )}
    {date && (
      <time class="text-sm text-gray-500">
        {new Date(date).toLocaleDateString()}
      </time>
    )}
  </div>
</article>