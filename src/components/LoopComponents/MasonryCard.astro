---
// src/components/section/loops/MasonryCard.astro
export interface Props {
  title: string;
  url?: string;
  description?: string;
  tags?: string[];
  image?: {
    src: string;
    alt: string;
  };
}

const { title, url, description, tags, image } = Astro.props;
---

<article class="break-inside-avoid mb-6 bg-white rounded-lg overflow-hidden shadow-md hover:-translate-y-1 hover:shadow-lg transition-all duration-200">
  {image && (
    <img 
      src={image.src} 
      alt={image.alt}
      class="w-full h-auto block"
    />
  )}
  <div class="p-5">
    <h3 class="text-lg font-semibold mb-2">
      {url ? (
        <a href={url} class="text-gray-900 hover:text-blue-600 transition-colors">
          {title}
        </a>
      ) : (
        <span>{title}</span>
      )}
    </h3>
    {description && (
      <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
    )}
    {tags && Array.isArray(tags) && tags.length > 0 && (
      <div class="mt-3 flex flex-wrap gap-1">
        {tags.map((tag: string) => (
          <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</article>