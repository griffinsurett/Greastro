---
// src/components/LoopComponents/SocialIcon.astro
import IconWrapper from '@/components/Icon/IconWrapper.astro';

export interface Props {
  title: string;
  link?: string;
  icon?: any;
  size?: 'sm' | 'md' | 'lg';
}

const { title, link, icon, size = 'md' } = Astro.props;

// Default icon if none provided
const displayIcon = icon || 'lucide:globe';

// Wrapper padding classes - controls overall button size
const wrapperPadding = {
  sm: 'p-2',      // 8px padding
  md: 'p-2.5',    // 10px padding  
  lg: 'p-3',      // 12px padding
};

// Icon sizes - actual icon dimensions
const iconSize = {
  sm: 'sm',
  md: 'md',
  lg: 'lg',
} as const;
---

{link ? (
  <a 
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class={`${wrapperPadding[size]} bg-gray-100 hover:bg-blue-100 rounded-full inline-flex items-center justify-center transition-all duration-200 hover:scale-110`}
    aria-label={`Visit our ${title} page`}
    title={title}
  >
    <IconWrapper icon={displayIcon} size={iconSize[size]} class="text-gray-700" />
  </a>
) : (
  <div 
    class={`${wrapperPadding[size]} bg-gray-100 rounded-full inline-flex items-center justify-center`}
    title={title}
  >
    <IconWrapper icon={displayIcon} size={iconSize[size]} class="text-gray-700" />
  </div>
)}