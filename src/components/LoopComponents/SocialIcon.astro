---
// src/components/LoopComponents/SocialIcon.astro
import Icon from '@/components/Icon';

export interface Props {
  title: string;
  link?: string;
  icon?: any;
  size?: 'sm' | 'md' | 'lg';
}

const { title, link, icon, size = 'md' } = Astro.props;

// Default icon if none provided
const displayIcon = icon || 'lu:globe';

// Wrapper padding classes
const wrapperPadding = {
  sm: 'p-2',
  md: 'p-2.5',
  lg: 'p-3',
};
---

{link ? (
  <a 
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class={`${wrapperPadding[size]} bg-gray-100 hover:bg-blue-100 rounded-full inline-flex items-center justify-center transition-all duration-200 hover:scale-110`}
    aria-label={`Visit our ${title} page`}
    title={title}
  >
    <Icon icon={displayIcon} size={size} className="text-gray-700" />
  </a>
) : (
  <div 
    class={`${wrapperPadding[size]} bg-gray-100 rounded-full inline-flex items-center justify-center`}
    title={title}
  >
    <Icon icon={displayIcon} size={size} className="text-gray-700" />
  </div>
)}