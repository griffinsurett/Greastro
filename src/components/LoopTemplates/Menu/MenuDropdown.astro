---
// src/components/LoopTemplates/Menu/MenuDropdown.astro
/**
 * Menu Dropdown Component
 * 
 * Dropdown/submenu that appears on hover.
 * Controlled by global CSS using direct child selectors.
 */

import MenuList from './MenuList.astro';

export interface Props {
  items: any[];
  level?: number;
}

const { items = [], level = 1 } = Astro.props;
---

<div 
  class="menu-dropdown hidden absolute top-full left-0 mt-0"
  role="menu"
>
  <MenuList items={items} level={level} />
</div>