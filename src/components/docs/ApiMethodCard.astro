---
// src/components/docs/ApiMethodCard.astro

export interface Props {
  method: string;
  description: string;
  returnType?: string;
}

const { method, description, returnType } = Astro.props;
---
<div class="bg-docs-bg border border-docs-border rounded-lg p-4 hover:border-docs-accent transition-all">
  <div class="flex items-start justify-between gap-4">
    <div class="flex-1">
      <code class="text-sm font-mono font-semibold text-docs-accent">{method}</code>
      <p class="text-sm text-docs-text-muted mt-2">{description}</p>
    </div>
    {returnType && (
      <div class="flex-shrink-0">
        <span class="text-xs font-mono text-docs-text-light bg-docs-bg3 px-2 py-1 rounded">
          {returnType}
        </span>
      </div>
    )}
  </div>
</div>