---
// src/components/docs/CollectionBadge.astro

export interface Props {
  count: number;
  label: string;
  color?: 'accent' | 'purple' | 'success' | 'warning';
}

const { count, label, color = 'accent' } = Astro.props;

const colorClasses = {
  accent: 'text-docs-accent bg-docs-accent-bg',
  purple: 'text-docs-purple bg-docs-purple-bg',
  success: 'text-docs-success bg-docs-success-bg',
  warning: 'text-docs-warning bg-docs-warning-bg',
};
---

<div class={`inline-flex items-center gap-2 px-4 py-2 rounded-lg ${colorClasses[color]}`}>
  <span class="text-2xl font-bold">{count}</span>
  <span class="text-sm font-medium">{label}</span>
</div>