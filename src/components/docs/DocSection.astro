---
// src/components/docs/DocSection.astro

export interface Props {
  id: string;
  title: string;
  description?: string;
}

const { id, title, description } = Astro.props;
---

<section id={id} class="mb-16 scroll-mt-24">
  <div class="flex items-center gap-4 mb-6">
    <div class="flex-1">
      <h2 class="text-3xl font-bold text-docs-text">{title}</h2>
      {description && (
        <p class="mt-2 text-docs-text-muted">{description}</p>
      )}
    </div>
    <a 
      href={`#${id}`}
      class="transition text-docs-text-light hover:text-docs-accent"
      aria-label="Link to this section"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
      </svg>
    </a>
  </div>
  <div class="space-y-8">
    <slot />
  </div>
</section>