---
// src/components/docs/FeatureGrid.astro

export interface Props {
  columns?: 2 | 3 | 4;
}

const { columns = 3 } = Astro.props;

const gridClasses = {
  2: 'grid md:grid-cols-2 gap-6',
  3: 'grid md:grid-cols-3 gap-6',
  4: 'grid md:grid-cols-2 lg:grid-cols-4 gap-6',
};
---

<div class={`mt-8 ${gridClasses[columns]}`}>
  <slot />
</div>