---
// src/components/docs/StatCard.astro

export interface Props {
  value: string | number;
  label: string;
  color?: 'accent' | 'purple' | 'success' | 'warning' | 'danger' | 'info';
}

const { value, label, color = 'accent' } = Astro.props;

const colorClasses = {
  accent: 'text-docs-accent',
  purple: 'text-docs-purple',
  success: 'text-docs-success',
  warning: 'text-docs-warning',
  danger: 'text-docs-danger',
  info: 'text-docs-info',
};
---

<div>
  <div class={`text-4xl font-bold mb-2 ${colorClasses[color]}`}>{value}</div>
  <div class="text-sm text-docs-text-muted">{label}</div>
</div>