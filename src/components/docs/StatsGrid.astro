---
// src/components/docs/StatsGrid.astro

export interface Props {
  columns?: 2 | 3 | 4;
}

const { columns = 4 } = Astro.props;

const gridClasses = {
  2: 'grid-cols-2',
  3: 'grid-cols-2 md:grid-cols-3',
  4: 'grid-cols-2 md:grid-cols-4',
};
---

<div class="docs-stat-card mt-12">
  <div class={`grid gap-8 ${gridClasses[columns]}`}>
    <slot />
  </div>
</div>