---
// src/components/docs/sidebar/SidebarLink.astro
/**
 * Individual sidebar navigation link
 */

export interface Props {
  href: string;
  label: string;
  target?: string;
}

const { href, label, target } = Astro.props;
const linkTarget = target || href.replace('#', '');
---

<a 
  href={href}
  data-sidebar-link
  data-target={linkTarget}
  class="docs-sidebar-link block px-4 py-3 text-sm rounded-lg font-medium relative text-docs-text-muted hover:text-docs-accent hover:bg-docs-accent/10 transition-all duration-200"
>
  {label}
</a>