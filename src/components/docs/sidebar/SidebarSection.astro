---
// src/components/docs/sidebar/SidebarSection.astro
/**
 * Sidebar navigation section with title and links
 */

import SidebarLink from './SidebarLink.astro';

export interface Props {
  title: string;
  items: {
    label: string;
    href: string;
  }[];
}

const { title, items } = Astro.props;
---

<div>
  <h3 class="text-xs font-bold uppercase tracking-wider mb-4 px-3 text-docs-text-light">
    {title}
  </h3>
  <ul class="space-y-1">
    {items.map(item => (
      <li>
        <SidebarLink href={item.href} label={item.label} />
      </li>
    ))}
  </ul>
</div>