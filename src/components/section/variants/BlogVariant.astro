---
// src/components/section/variants/BlogVariant.astro
import type { BaseVariantProps } from './utils/VariantTypes';

interface Props extends BaseVariantProps {
  columns?: 1 | 2 | 3;
}

const { 
  items = [],
  title,
  description,
  className = '',
  columns = 2
} = Astro.props as Props;

const columnClasses = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 lg:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
};
---

<section class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="text-center mb-12">
      {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
      {description && <p class="text-lg text-gray-600 max-w-2xl mx-auto">{description}</p>}
    </div>
  )}
  
  <div class={`grid ${columnClasses[columns]} gap-8`}>
    {items.map((item) => (
      <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
        <div class="p-6">
          {/* Article info */}
          <div class="mb-4">
            {item.tags && item.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-3">
                {item.tags.slice(0, 3).map((tag: string) => (
                  <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>
            )}
            
            <h3 class="text-2xl font-bold mb-2">
              <a href={item.url} class="text-gray-900 hover:text-blue-600 transition-colors">
                {item.title}
              </a>
            </h3>
            
            {item.description && (
              <p class="text-gray-600 mb-4 line-clamp-2">
                {item.description}
              </p>
            )}
            
            <div class="flex items-center text-sm text-gray-500 gap-4">
              {item.date && (
                <time>{new Date(item.date).toLocaleDateString()}</time>
              )}
            </div>
          </div>
          
          {/* Author info */}
          {item.author && (
            <div class="pt-4 mt-4 border-t border-gray-200">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                  <span class="text-blue-600 text-sm font-bold">
                    {item.author.initials}
                  </span>
                </div>
                <div>
                  <p class="font-medium text-gray-900">
                    {item.author.name}
                  </p>
                  {item.author.role && (
                    <p class="text-xs text-gray-500">{item.author.role}</p>
                  )}
                </div>
              </div>
            </div>
          )}
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
</style>