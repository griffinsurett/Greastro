---
// src/components/section/variants/BlogVariant.astro
import type { BaseVariantProps } from './utils/VariantTypes';
import ArticleCard from '@/components/LoopComponents/ArticleCard.astro';

interface Props extends BaseVariantProps {
  columns?: 1 | 2 | 3;
}

const { 
  items = [],
  title,
  description,
  className = '',
  columns = 2,
  collectionUrl,
  collectionTitle,
} = Astro.props as Props;

const viewAllText = `View All ${collectionTitle || 'Articles'}`;

const columnClasses = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 lg:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
};
---

<section class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="text-center mb-12">
      {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
      {description && <p class="text-lg text-gray-600 max-w-2xl mx-auto">{description}</p>}
    </div>
  )}
  
  <ul class={`grid ${columnClasses[columns]} gap-8 list-none`}>
    {items.map((item) => (
      <li>
        <ArticleCard {...item} />
      </li>
    ))}
  </ul>
  
  {/* View All button */}
  {collectionUrl && items.length > 0 && (
    <div class="mt-12 text-center">
      <a 
        href={collectionUrl} 
        class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-full hover:from-blue-700 hover:to-blue-800 hover:shadow-lg transform hover:-translate-y-1 transition-all duration-200"
      >
        {viewAllText}
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
    </div>
  )}
</section>