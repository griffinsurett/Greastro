---
// src/components/section/variants/CardVariant.astro
import type { BaseVariantProps } from './utils/VariantTypes';

interface Props extends BaseVariantProps {
  columns?: 1 | 2 | 3 | 4;
}

const { 
  items = [],
  title,
  description,
  className = '',
  columns = 3 
} = Astro.props as Props;

const columnClasses = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4',
};
---

<section class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="text-center mb-12">
      {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
      {description && <p class="text-lg text-gray-600 max-w-2xl mx-auto">{description}</p>}
    </div>
  )}
  
  {items.length > 0 ? (
    <div class={`grid ${columnClasses[columns]} gap-8`}>
      {items.map((item) => (
        <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:-translate-y-2 hover:shadow-xl transition-all duration-300 flex flex-col">
          {item.image && (
            <img 
              src={item.image.src} 
              alt={item.image.alt}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-2xl font-bold mb-4">{item.title}</h3>
            {item.description && (
              <p class="text-gray-600 mb-6 flex-1 leading-relaxed">{item.description}</p>
            )}
            {item.url && (
              <a 
                href={item.url} 
                class="text-blue-600 font-semibold hover:underline self-start"
              >
                Learn More â†’
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  ) : (
    <slot />
  )}
</section>