---
// src/components/variants/CardVariant.astro
export interface Props {
  entries: any[];
  collection: string;
  title?: string;
  description?: string;
  className?: string;
  columns?: 1 | 2 | 3 | 4;
}

const { 
  entries, 
  collection, 
  title,
  description,
  className = '',
  columns = 3 
} = Astro.props;

const columnClasses = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4',
};
---

<section class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="text-center mb-12">
      {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
      {description && <p class="text-lg text-gray-600 max-w-2xl mx-auto">{description}</p>}
    </div>
  )}
  
  <div class={`grid ${columnClasses[columns]} gap-8`}>
    {entries.map((entry) => (
      <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:-translate-y-2 hover:shadow-xl transition-all duration-300 flex flex-col">
        {entry.data.image && (
          <img 
            src={entry.data.image.src} 
            alt={entry.data.image.alt}
            class="w-full h-48 object-cover"
          />
        )}
        <div class="p-6 flex-1 flex flex-col">
          <h3 class="text-2xl font-bold mb-4">{entry.data.title}</h3>
          {entry.data.description && (
            <p class="text-gray-600 mb-6 flex-1 leading-relaxed">{entry.data.description}</p>
          )}
          <a 
            href={`/${collection}/${entry.slug}`} 
            class="text-blue-600 font-semibold hover:underline self-start"
          >
            Learn More â†’
          </a>
        </div>
      </div>
    ))}
  </div>
</section>