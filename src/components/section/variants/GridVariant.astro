---
// src/components/section/variants/GridVariant.astro
/**
 * Grid Variant - Default Section Layout
 * 
 * Responsive grid layout with:
 * - Configurable columns (1-6)
 * - Configurable gap spacing
 * - Optional title and description
 * - Optional "View All" link
 * - Uses GridCard for individual items
 * 
 * This is the default variant used when no variant is specified.
 * Works well for most content types - services, products, team members, etc.
 */

import type { BaseVariantProps } from "../Section.types";
import GridCard from "@/components/LoopComponents/GridCard.astro";
import Button from "@/components/Button/Button";

interface Props extends BaseVariantProps {
  columns?: 1 | 2 | 3 | 4 | 5 | 6;  // Number of columns in grid
  gap?: "sm" | "md" | "lg" | "xl";  // Spacing between items
}

const {
  items = [],
  title,
  description,
  className = "",
  columns = 3,
  gap = "md",
  collectionUrl,
  collectionTitle,
} = Astro.props as Props;

const viewAllText = `View All`;

// Map gap sizes to Tailwind classes
const gapClasses = {
  sm: "gap-2",
  md: "gap-4",
  lg: "gap-6",
  xl: "gap-8",
};

// Responsive column classes
const columnClasses = {
  1: "grid-cols-1",
  2: "grid-cols-1 md:grid-cols-2",
  3: "grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
  4: "grid-cols-1 md:grid-cols-2 lg:grid-cols-4",
  5: "grid-cols-1 md:grid-cols-2 lg:grid-cols-5",
  6: "grid-cols-1 md:grid-cols-3 lg:grid-cols-6",
};
---

<section class={`py-16 ${className}`}>
  {/* Optional section header */}
  {
    (title || description) && (
      <div class="text-center mb-12">
        {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
        {description && (
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">{description}</p>
        )}
      </div>
    )
  }

  {/* Grid of items */}
  {
    items.length > 0 && (
      <ul class={`grid ${columnClasses[columns]} ${gapClasses[gap]} list-none`}>
        {items.map((item) => (
          <li>
            <GridCard {...item} />
          </li>
        ))}
      </ul>
    )
  }

  {/* Optional "View All" link */}
  {
    collectionUrl && items.length > 0 && (
      <div class="mt-12 text-center">
        <Button
          href={collectionUrl}
          rightIcon="lu:arrow-right"
          variant="primary"
          size="lg"
        >
          {viewAllText}
        </Button>
      </div>
    )
  }
</section>