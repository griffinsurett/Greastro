---
// src/components/section/variants/ListVariant.astro
import type { BaseVariantProps } from './utils/VariantTypes';

// ListVariant has no variant-specific props
type Props = BaseVariantProps;

const { 
  items = [],
  title,
  description,
  className = ''
} = Astro.props as Props;
---

<section class={`py-16 ${className}`}>
  {(title || description) && (
    <div class="mb-12">
      {title && <h2 class="text-4xl font-bold mb-4">{title}</h2>}
      {description && <p class="text-lg text-gray-600 max-w-3xl">{description}</p>}
    </div>
  )}
  
  {items.length > 0 ? (
    <div class="flex flex-col gap-8">
      {items.map((item) => (
        <article class="flex gap-8 p-6 bg-white rounded-lg shadow-md">
          {item.image && (
            <div class="flex-shrink-0">
              <img 
                src={item.image.src} 
                alt={item.image.alt}
                class="w-48 h-36 object-cover rounded-md"
              />
            </div>
          )}
          <div class="flex-1">
            <h3 class="text-2xl font-semibold mb-2">
              <a href={item.url} class="text-gray-900 hover:text-blue-600 transition-colors">
                {item.title}
              </a>
            </h3>
            {item.description && (
              <p class="text-gray-600 leading-relaxed mb-2">{item.description}</p>
            )}
            {item.date && (
              <time class="text-sm text-gray-500">
                {new Date(item.date).toLocaleDateString()}
              </time>
            )}
          </div>
        </article>
      ))}
    </div>
  ) : (
    <slot />
  )}
</section>