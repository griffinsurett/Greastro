---
// src/layouts/Header.astro
/**
 * Site Header with Navigation
 * 
 * Now uses query system to build menu at render time.
 */

import ContentRenderer from '@/components/ContentRenderer/ContentRenderer.astro';
import { query, sortBy } from '@/utils/query';
import { filterByMenu } from '@/utils/menuQueries';
import { siteData } from '@/content/siteData';

// Query menu items at render time (not build time)
const menuQuery = query('menu-items')
  .where(filterByMenu('main-menu'))
  .orderBy(sortBy('order', 'asc'));
---
<header class="sticky top-0 z-[99999] bg-white border-b border-gray-200 shadow-sm">
  <div class="">
    <div class="flex items-center justify-between h-16 w-full">
      <!-- Logo -->
      <a 
        href="/" 
        class="text-2xl font-bold text-gray-900 hover:text-blue-600 transition-colors"
      >
        {siteData.title}
      </a>
      
      <!-- Navigation Menu using query -->
      <ContentRenderer 
        query={menuQuery}
        variant="MenuVariant"
      />
    </div>
  </div>
</header>