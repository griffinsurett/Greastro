---
// src/layouts/docs/DocsLayout.astro
/**
 * Documentation Layout
 * Professional documentation theme with sidebar navigation
 */

import HeadTags from '@/layouts/HeadTags.astro';
import SEO from '@/layouts/SEO.astro';
import DocsTheme from './DocsTheme.astro';
import BodyTags from '@/layouts/BodyTags.astro';
import DocsThemeToggle from '@/components/docs/DocsThemeToggle.jsx';
import DocsSidebar from '@/components/docs/Sidebar.astro';

export interface Props {
  title: string;
  description: string;
  noindex?: boolean;
  nofollow?: boolean;
  sections?: {
    title: string;
    items: {
      label: string;
      href: string;
      active?: boolean;
    }[];
  }[];
  [key: string]: any;
}

const { 
  title, 
  description, 
  noindex = true, 
  nofollow = true, 
  sections,
  ...seoProps 
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <DocsTheme />
    <SEO title={title} description={description} {...seoProps} />
    <HeadTags />

    {noindex && <meta name="robots" content={`${noindex ? 'noindex' : 'index'},${nofollow ? 'nofollow' : 'follow'}`} />}
  </head>

  <body class="antialiased bg-docs-bg2 text-docs-text">
    <BodyTags />

    <div class="min-h-screen">
      <!-- Sidebar -->
      <DocsSidebar sections={sections} />

      <!-- Main Content -->
      <main class="lg:ml-72">
        <!-- Header -->
        <header class="sticky top-0 z-40 backdrop-blur-md shadow-sm bg-docs-bg/90 border-b border-docs-border">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
            <div class="flex items-center justify-between gap-4">
              <div class="min-w-0 flex-1">
                <h1 class="text-2xl sm:text-3xl font-bold truncate text-docs-text">{title}</h1>
                <p class="text-sm sm:text-base mt-1 truncate text-docs-text-muted">{description}</p>
              </div>
              <div class="flex items-center gap-3">
                <DocsThemeToggle client:load />
                
              </div>
            </div>
          </div>
        </header>

        <!-- Content -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
          <div class="prose prose-blue max-w-none">
            <slot />
          </div>
        </div>

        <!-- Footer -->
        <footer class="mt-20 bg-docs-bg border-t border-docs-border">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
            <div class="flex flex-col sm:flex-row justify-between items-center gap-6">
              <p class="text-sm text-center sm:text-left text-docs-text-muted">
                Built with Astro Content Collections Query System
              </p>
              <div class="flex flex-wrap gap-6 justify-center">
                <a href="/" class="text-sm font-medium transition text-docs-text-muted hover:text-docs-accent">Home</a>
                <a href="/docs" class="text-sm font-medium transition text-docs-text-muted hover:text-docs-accent">Docs</a>
                <a href="/examples/query-cheatsheet" class="text-sm font-medium transition text-docs-text-muted hover:text-docs-accent">Cheatsheet</a>
              </div>
            </div>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>