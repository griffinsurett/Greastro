---
// src/pages/index.astro
import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/section/Section.astro";
import { siteData } from "@/content/siteData";
---
<BaseLayout title="Home" description={siteData.description}>
  <main class="flex-1">

    <Section
      collection="menu-items"
      variant="GridVariant"
      columns={3}
      gap="lg"
    />

    <!-- Hero Section -->
    <Section
      variant="HeroVariant"
      title="Welcome"
      description="Static hero without collection"
    />

    <Section
      collection="blog"
      variant="BlogVariant"
      columns={2}
    />

    <Section
      collection="services"
      variant="GridVariant"
      columns={3}
      gap="lg"
    />

    <Section
      collection="authors"
      variant="GridVariant"
      columns={3}
      gap="lg"
    />

    <Section
      collection="portfolio"
      variant="ListVariant"
    />

    <Section
      collection="testimonials"
      variant="MasonryVariant"
    />

    <!-- FAQ Section -->
    <Section
      collection="faq"
      variant="AccordionVariant"
      allowMultiple={false}
    />

    <!-- Contact Section -->
    <Section
      collection="contact-us"
      variant="ContactVariant"
      columns={2}
    />
  </main>
</BaseLayout>