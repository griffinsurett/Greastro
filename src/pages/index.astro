---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Section from "@/components/section/Section.astro";
---

<Layout title="Home">
  <!-- Any collection can use any variant -->

  <!-- Blog posts in hero format -->
  <Section collection="blog" variant="hero" />

  <!-- Services in grid layout -->
  <Section
    collection="services"
    variant="grid"
    title="Our Services"
    columns={3}
    gap="lg"
  />

  <!-- Portfolio in list format -->
  <Section collection="portfolio" variant="list" title="Recent Projects" />

  <!-- Testimonials in masonry -->
  <Section
    collection="testimonials"
    variant="masonry"
    title="What People Say"
  />
</Layout>
