---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Section from "@/components/section/Section.astro";
---

<Layout title="Home">
  <!-- Use the full variant filename (without .astro) -->

  <!-- Blog posts in hero format -->
  <Section
    variant="HeroVariant"
    title="Welcome"
    description="Static hero without collection"
  />

  <Section
    collection="blogs"
    variant="BlogVariant"
    title="Latest Articles"
    columns={2}
  />

  <Section
    collection="services"
    variant="GridVariant"
    title="Our Services"
    columns={3}
    gap="lg"
  />

  <Section
    collection="authors"
    variant="GridVariant"
    title="Our Authors"
    columns={3}
    gap="lg"
  />

  <!-- Portfolio in list format -->
  <Section
    collection="portfolio"
    variant="ListVariant"
    title="Recent Projects"
  />

  <!-- Testimonials in masonry -->
  <Section
    collection="testimonials"
    variant="MasonryVariant"
    title="What People Say"
  />
</Layout>
